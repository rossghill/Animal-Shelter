<p>Name:
  <%= @animal.name %>
</p>
<p>Admission Date:
  <%= @animal.admission_date %>
</p>
<p>Animal Type:
  <%= @animal.animal_type %>
</p>
<hr/>
<form method="POST" action="/animals/<%= @animal.id %>">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @animal.name %>" />
  <label for="adoptable">Available for Adoption:</label>
  <input type="text" name="adoptable" value="<%= @animal.adoptable %>" />
    <p><input type="submit" value="Submit"></p>
</form>
