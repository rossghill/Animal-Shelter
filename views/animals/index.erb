<h2>Current Pets</h2>
<p class="new-title"><a href="/animals/new">Add new pet</p></a>
<div class="pets-container">

    <% @animals.each do |animal| %>
      <div class="text-half">
        <hr/>
          <p><span class="fancy-text"><%= animal.name %></span></p>
          <p>Admission Date: <%= animal.admission_date %></p>
          <p>Owner:
            <% if animal.owner.length != 0 %>
              <% animal.owner.each do |owner| %>
              <%= owner.name %>
            <% end %>
            <% else %>
              Not adopted
            <% end %>
          </p>
          <p>Ready for Adoption? <%= animal.adoptable %></p>

        </div>
        <div class="pet-half">
          <img class="animal-images" src="<%= animal.image %>">
          <a href="/animals/<%= animal.id %>">More/Edit</a>
        </div>

    <% end %>
</div>
